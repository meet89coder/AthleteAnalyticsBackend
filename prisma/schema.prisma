// Athlete Analytics Backend - Prisma Schema
// Updated to match the new database schema
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         Int       @id @default(autoincrement())
  email                      String    @unique @db.VarChar(255)
  password                   String    @db.VarChar(255)
  role                       String    @default("athlete") @db.VarChar(50)
  dateOfBirth                DateTime? @map("date_of_birth") @db.Date
  firstName                  String    @map("first_name") @db.VarChar(100)
  lastName                   String    @map("last_name") @db.VarChar(100)
  age                        Int?
  height                     Decimal?  @db.Decimal(5, 2)
  weight                     Decimal?  @db.Decimal(5, 2)
  tenantUniqueId             String    @unique @map("tenant_unique_id") @db.VarChar(255)
  emergencyContactNumber     String?   @map("emergency_contact_number") @db.VarChar(20)
  emergencyContactName       String?   @map("emergency_contact_name") @db.VarChar(255)
  phone                      String?   @db.VarChar(20)
  createdAt                  DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt                  DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  teamMemberships            TeamMember[]

  @@index([email])
  @@index([role])
  @@index([tenantUniqueId])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([firstName, lastName], map: "idx_users_full_name")
  @@index([age], map: "idx_users_age")
  @@map("users")
}

model Tenant {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  city        String   @db.VarChar(100)
  state       String   @db.VarChar(100)
  country     String   @db.VarChar(100)
  description String?  @db.Text
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  teams       Team[]

  @@index([name])
  @@index([city, state, country], map: "idx_tenants_location")
  @@index([isActive])
  @@index([createdAt])
  @@index([updatedAt])
  @@map("tenants")
}

model Team {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(255)
  category     String   @db.VarChar(100)
  tenantId     Int      @map("tenant_id")
  goals        String?  @db.Text
  totalMembers Int      @default(0) @map("total_members")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenant       Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  members      TeamMember[]
  games        TeamGame[]
  activities   TeamActivity[]
  schedules    TeamSchedule[]

  @@index([tenantId])
  @@index([category])
  @@index([createdAt])
  @@index([name])
  @@map("teams")
}

model TeamMember {
  id       Int      @id @default(autoincrement())
  teamId   Int      @map("team_id")
  userId   Int      @map("user_id")
  joinedAt DateTime @default(now()) @map("joined_at") @db.Timestamptz(6)
  isActive Boolean  @default(true) @map("is_active")
  role     String   @default("member") @db.VarChar(50)

  // Relations
  team     Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user     User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@index([isActive])
  @@index([role])
  @@index([joinedAt])
  @@map("team_members")
}

model TeamGame {
  id           Int      @id @default(autoincrement())
  teamId       Int      @map("team_id")
  name         String   @db.VarChar(255)
  playedOn     DateTime @map("played_on") @db.Timestamptz(6)
  playedAgainst String  @map("played_against") @db.VarChar(255)
  result       String   @db.VarChar(20)
  description  String?  @db.Text
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  team         Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([playedOn])
  @@index([result])
  @@index([playedAgainst])
  @@map("team_games")
}

model TeamActivity {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  description String?  @db.Text
  teamId      Int      @map("team_id")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  team        Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([createdAt])
  @@map("team_activities")
}

model TeamSchedule {
  id          Int      @id @default(autoincrement())
  teamId      Int      @map("team_id")
  name        String   @db.VarChar(255)
  type        String   @db.VarChar(50)
  description String?  @db.Text
  scheduledAt DateTime @map("scheduled_at") @db.Timestamptz(6)
  location    String?  @db.VarChar(255)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  team        Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([type])
  @@index([scheduledAt])
  @@index([location])
  @@map("team_schedules")
}